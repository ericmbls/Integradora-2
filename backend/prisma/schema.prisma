generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(user)
  createdAt DateTime @default(now())

  cultivos  Cultivo[]
}

model Cultivo {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  fechaSiembra DateTime
  ubicacion   String
  frecuenciaRiego Int
  estado      String

  userId      Int
  user        User @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}
